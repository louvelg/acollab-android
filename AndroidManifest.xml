<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.akelio.android.acollab"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_acollab_simple"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.akelio.android.acollab.view.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.akelio.android.acollab.NewsActivity"></activity>
        <activity android:name="com.akelio.android.acollab.view.UsersActivity" />
        <activity android:name="com.akelio.android.acollab.view.UsersAct"></activity>
        <activity android:name="com.akelio.android.acollab.view.SettingsActivity" />
        <activity android:name="com.akelio.android.acollab.view.ActivityStreamActivity" />

        <service android:name="com.akelio.android.acollab.service.ContactService" />
        <service android:name="com.akelio.android.acollab.service.SpaceService" />
        <service android:name="com.akelio.android.acollab.service.ActivityStreamService" />

        <receiver android:name="com.akelio.android.acollab.receiver.ActivityStreamReceiver" 
            android:permission="android.permission.RECEIVE_BOOT_COMPLETED">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
