<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#FFF">

 
  
   <Button
       android:id="@+id/buttonUsers"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/buttonLogin"
       android:layout_below="@+id/buttonLogin"
       android:layout_marginTop="2dp"
       android:text="Users" />
   
   <Button
       android:id="@+id/buttonMenu"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_above="@+id/buttonActivityStream"
       android:layout_toRightOf="@+id/buttonLogin"
       android:layout_marginTop="2dp"
       android:text="Menu" />
   
   <Button
       android:id="@+id/buttonRefrechContactService"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/buttonLogin"
       android:layout_below="@+id/buttonUsers"
       android:layout_marginTop="2dp"
       android:text="Refresh Contact Service" />
   
   <Button
       android:id="@+id/buttonRefrechActivityStreamService"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/buttonLogin"
       android:layout_below="@+id/buttonRefrechContactService"
       android:layout_marginTop="2dp"
       android:text="Refresh Activity Stream Service" />

   <Button
       android:id="@+id/buttonRefrechSpaceService"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/buttonLogin"
       android:layout_below="@+id/buttonRefrechActivityStreamService"
       android:layout_marginTop="2dp"
       android:text="Refresh Space Service" />

   <Button
       android:id="@+id/buttonActivityStream"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_above="@+id/buttonRefrechContactService"
       android:layout_toRightOf="@+id/buttonUsers"
       android:text="News" />
   
   <Button
       android:id="@+id/buttonSettings"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_above="@+id/buttonRefrechContactService"
       android:layout_toRightOf="@+id/buttonActivityStream"
       android:text="Settings" />

   <Button
       android:id="@+id/buttonLogin"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="16dp"
       android:text="Login" />

</RelativeLayout>
